<Page
    x:Class="Easy_Minecraft_Gui_WinUI3.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Easy_Minecraft_Gui_WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="30">
        <TextBlock Text="hehe" 
       x:Name="ZrokCode"
       VerticalAlignment="Bottom"
       HorizontalAlignment="Right"
       FontSize="15" 
       FontWeight="Bold" 
       Margin="0,0,0,20" 
       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Nhập Mã Mà Chủ Server Gửi Cho Bạn Để Vào Server" 
                           FontSize="27" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20" 
                           Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>

            <TextBox 
                    x:Name="inputTextBox" 
                    PlaceholderText="Nhập Mã Vào Đây" 
                    HorizontalAlignment="Stretch" 
                    Margin="0,0,0,10" 
                    Width="Auto" 
                    FontSize="18"
                    Padding="10,5"
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"/>

            <StackPanel Orientation="Horizontal" Margin="0,-1,0,10" VerticalAlignment="Center">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7BA;" FontSize="12" Foreground="Red" Margin="0,0,10,0" />
                <TextBlock 
                        Text="Cảnh báo: Mã Zrok Phải Giống Nhau Mới Kết Nối Được!" 
                        Foreground="Red" 
                        FontSize="10" 
                        Margin="-9,0,0,0"
                        VerticalAlignment="Center"/>
            </StackPanel>

            <Button 
                    x:Name="connectButton" 
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                    Content="Kết Nối!" 
                    HorizontalAlignment="Left" 
                    Margin="0,5,0,10" 
                    Click="Button_Click" 
                    FontSize="18"
                    CornerRadius="5"/>

            <ProgressRing 
                    x:Name="progressRing" 
                    IsActive="False" 
                    Width="50" 
                    Height="50" 
                    Visibility="Collapsed" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0"
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
        </StackPanel>
    </Grid>
</Page>
